FROM python:3.7

RUN apt-get update  -y && \ 
    apt-get install -y --no-install-recommends vim \
    curl \
    net-tools \
    telnet && pip install --upgrade pip

RUN mkdir /shouldipickitup
COPY . /shouldipickitup
WORKDIR /shouldipickitup
RUN pip install -r requirements.txt

COPY ./flask-docker-entrypoint.sh /usr/local/bin/ 
RUN chmod 755 /usr/local/bin/flask-docker-entrypoint.sh 
ENTRYPOINT ["/usr/local/bin/flask-docker-entrypoint.sh"]

EXPOSE 8000
